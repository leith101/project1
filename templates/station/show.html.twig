{% extends 'back1.html.twig' %}

{% block title %}Station{% endblock %}

{% block body %}
    <div style="text-align: center; padding: 20px;">

        <h1>Station</h1>

        <div style="margin: 0 auto; width: 60%;">
            <table class="table" style="width: 100%; background-color: #f2f2f2; color: #333;">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ station.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom_s</th>
                        <td>{{ station.nomS }}</td>
                    </tr>
                    <tr>
                        <th>Emplacement_s</th>
                        <td>{{ station.emplacementS }}</td>
                    </tr>
                    <tr>
                        <th>Description_s</th>
                        <td>{{ station.descriptionS }}</td>
                    </tr>
                </tbody>
            </table>

            <div style="margin-top: 20px;">
                <a href="{{ path('app_station_index') }}">Back to List</a>
                <a href="{{ path('app_station_edit', {'id': station.id}) }}">Edit</a>
            </div>

            {{ include('station/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}