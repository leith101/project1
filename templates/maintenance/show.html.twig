{% extends 'back1.html.twig' %}

{% block title %}Maintenance{% endblock %}

{% block body %}
    <div style="text-align: center; padding: 20px;">

        <h1>Maintenance</h1>

        <div style="margin: 0 auto; width: 60%;">
            <table class="table" style="width: 100%; background-color: #f2f2f2; color: #333;">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ maintenance.id }}</td>
                    </tr>
                    <tr>
                        <th>Start Time</th>
                        <td>{{ maintenance.startTime ? maintenance.startTime|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>End Time</th>
                        <td>{{ maintenance.endTime ? maintenance.endTime|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <div style="margin-top: 20px;">
                <a href="{{ path('app_maintenance_index') }}">Back to List</a>
                <a href="{{ path('app_maintenance_edit', {'id': maintenance.id}) }}">Edit</a>
            </div>

            {{ include('maintenance/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}