
{% extends 'back.html.twig' %}
{% block title %}utilisateur
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-xl">
			<div class="card mb-4">
				<div class="card-header d-flex justify-content-between align-items-center">
					<h5 class="mb-0">Modifier utilisateur</h5>

				</div>
				<div class="card-body">
					{{ form_start(form) }}
					<div class="mb-3">
						<label class="form-label" for="basic-default-fullname">Nom utilisatteur</label>


						{{ form_widget(form.username, { 'value': utilisateur.getUsername(), 'attr': {'class': 'form-control'} }) }}


					</div>
					<div class="mb-3">
						<label class="form-label" for="basic-default-company">email</label>
						{{ form_widget(form.email, { 'value': utilisateur.getEmail(), 'attr': {'class': 'form-control'} }) }}
					</div>

					<div class="mb-3">
						<label class="form-label" for="basic-default-message">password</label>
						{{ form_widget(form.password, { 'value': utilisateur.getPassword(), 'attr': {'class': 'form-control'} }) }}
					</div>

					<div class="mb-3">
						<label class="form-label" for="basic-default-message">date</label>
						{{ form_widget(form.date, { 'value': utilisateur.getDate(), 'attr': {'class': 'form-control'} }) }}
					</div>

					<div class="mb-3">
						<label class="form-label" for="basic-default-message">gender</label>
						{{ form_widget(form.gender, { 'value': utilisateur.getGender(), 'attr': {'class': 'form-control'} }) }}
					</div>


					<button class="btn btn-primary">{{ button_label|default('Modifier utilisateur') }}</button>

				</form>
				{{ form_end(form) }}
			</div>
		</div>
	</div>

{% endblock %}