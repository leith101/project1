{% extends 'back.html.twig' %}

{% block title %}Réponse{% endblock %}

{% block body %}
    <style>
        /* Styles pour la présentation */
        h1 {
            font-size: 28px;
            margin-bottom: 20px;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f8f9fa;
        }

        tbody tr:nth-of-type(odd) {
            background-color: #f3f4f6;
        }

        tbody tr:hover {
            background-color: #e9ecef;
        }

        a {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px;
            padding: 8px 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        a:hover {
            background-color: #0056b3;
        }

        .link-edit {
            background-color: #28a745;
            color: #fff;
        }

        .link-edit:hover {
            background-color: #218838;
        }

        .link-back {
            background-color: #007bff;
            color: #fff;
        }

        .link-back:hover {
            background-color: #0056b3;
        }
    </style>

    <h1>Réponse</h1>

    <table>
        <tbody>
            <tr>
                <th>Id Réponse</th>
                <td>{{ reponse.idReponse }}</td>
            </tr>
            <tr>
                <th>Description Réponse</th>
                <td>{{ reponse.descriptionReponse }}</td>
            </tr>
            <tr>
                <th>Date Réponse</th>
                <td>{{ reponse.dateReponse ? reponse.dateReponse|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reponse_index') }}" class="link-back">Retour à la liste</a>
    <a href="{{ path('app_reponse_edit', {'id_reponse': reponse.id_reponse}) }}" class="link-edit">Modifier</a>
    {{ include('reponse/_delete_form.html.twig') }}
{% endblock %}